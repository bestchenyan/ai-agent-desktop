{
  "extends": [
    "@electron-toolkit/tsconfig/tsconfig.node.json",
    "./tsconfig.base.json"
  ],
  "include": [
    "electron.vite.config.*",
    "forge.config.ts",
    "scripts/**/*",
    "src/main/**/*",
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["electron-vite/node"]
  }
}
